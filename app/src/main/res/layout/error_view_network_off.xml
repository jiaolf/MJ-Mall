<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
       android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:background="@color/error_bg_color" android:gravity="center_horizontal"
                  android:orientation="vertical">

        <ImageView android:id="@+id/iv_error_hint"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="145.0dip"
                   android:src="@drawable/ic_net_no_connect"/>

        <TextView android:id="@+id/tv_error_hint"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="39.0dip"
                  android:gravity="center"
                  android:text="@string/error_network_off"
                  android:textColor="#ff9c9c9c"
                  android:textSize="14.0sp"/>

        <Button android:id="@+id/btn_retry"
                android:layout_width="130.0dip"
                android:layout_height="39.0dip"
                android:layout_marginTop="30.0dip"
                android:background="@drawable/error_btn_bg"
                android:gravity="center"
                android:text="@string/error_retry"
                android:textColor="#ffffffff"
                android:textSize="15.0sp"/>
    </LinearLayout>
</merge>